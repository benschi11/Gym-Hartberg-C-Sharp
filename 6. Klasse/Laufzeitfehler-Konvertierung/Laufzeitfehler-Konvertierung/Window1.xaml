<?xml version="1.0" encoding="utf-8"?>
<Window
	x:Class="Laufzeitfehler_Konvertierung.Window1" xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	Title="Laufzeitfehler_Konvertierung"
	Width="300"
	Height="149">
	<Grid>
		<TextBox
			RenderTransformOrigin="0.5583,0.5"
			x:Name="m_tbInput"
			Width="274"
			Height="20"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Margin="8,50,0,0" />
		<Button
			x:Name="m_btnStart"
			Content="Konvertiere zu Zahl"
			Width="274"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Left"
			VerticalAlignment="Stretch"
			Margin="8,80,0,8"
			Click="m_btnStart_Click" />
		<TextBlock
			Width="187"
			Height="19"
			Grid.Column="0"
			Grid.Row="0"
			HorizontalAlignment="Left"
			VerticalAlignment="Top"
			Margin="8,23,0,0">
			<Run
				Text="Geben Sie bitte eine Zahl ein:" />
		</TextBlock>
	</Grid>
</Window>